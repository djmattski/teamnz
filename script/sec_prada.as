package script{	import com.greensock.TweenLite;	import com.greensock.easing.*;		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.geom.ColorTransform;		import script.ui.BaseButton;		import sec_prada.section_bottom;	import sec_prada.section_top;
		public class sec_prada extends Sprite	{			private var sec_top:MovieClip;		private var sec_bottom:MovieClip;		private var sanFran_img_gal:Sprite;		private var img_gal_icon:global_image_gallery_icon;		private var readButton:BaseButton;		public var theAppBase:appBase;				public function sec_prada(mainApp:appBase)		{			theAppBase = mainApp;						sec_top = new section_top();			sec_top.x = -1300;			addChild(sec_top);						sec_bottom = new section_bottom();			sec_bottom.x = 1300;			sec_bottom.mouseChildren = false;			sec_bottom.mouseEnabled = false;			addChild(sec_bottom);						readButton = new BaseButton(sec_top.readbutton);						//Img gal			/*sanFran_img_gal = new Sprite();			sanFran_img_gal.name = 'sanFran_img_gal';			sanFran_img_gal.x = 500;			sanFran_img_gal.y = video.y + video.height + 55;			sanFran_img_gal.buttonMode = true;			sec_right.addChild(sanFran_img_gal);			giveMeACircleBtn('img_gal', 0x805080, 0x512F4B, sanFran_img_gal);*/						addListeners();			animateIn();		}				public function flyout(my_dispatch:customDispatcher):void		{			disable();			removeListeners();						TweenLite.to(sec_bottom, 1, { x:1300, ease:Sine.easeIn});			TweenLite.to(sec_top, 1.4, { x:-1300,ease:Sine.easeIn, onComplete:my_dispatch.dispatchEvent, onCompleteParams:[new Event(my_dispatch.ACTION)]});		}				public function enable():void		{			readButton.enable(); 		}				public function disable():void		{			readButton.disable();		}				protected function animateIn():void		{			TweenLite.to(sec_bottom, 1, { x:0, ease:Sine.easeOut });			TweenLite.to(sec_top, 1.4, { x:0, ease:Sine.easeOut, onComplete:enable });		}				protected function addListeners():void		{			addEventListener(MouseEvent.CLICK, buttonClicked);		}				protected function removeListeners():void		{			removeEventListener(MouseEvent.CLICK, buttonClicked);		}				private function buttonClicked(e:MouseEvent):void		{			switch (e.target) {				case readButton.content:					break;			}		}				public function giveMeACircleBtn(theName:String, theColour1:uint, theColour2:uint, theContainer:Sprite):void		{			var thisBack:Sprite = new Sprite();			thisBack.name = theName;			thisBack.graphics.beginFill(theColour1, 1);			thisBack.graphics.drawCircle(0, 0, 30);			thisBack.graphics.endFill();			//thisBack.width = 80;			//thisBack.height = 80;			theContainer.addChild(thisBack);			img_gal_icon = new global_image_gallery_icon();			img_gal_icon.x = (img_gal_icon.width/2)*-1;			img_gal_icon.y = (img_gal_icon.height/2)*-1;			theContainer.addChild(img_gal_icon);			theContainer.addEventListener(MouseEvent.ROLL_OVER, function():void {				//alter colour 				var my_color:ColorTransform = new ColorTransform();				my_color.color = theColour2;				thisBack.transform.colorTransform = my_color;			});			theContainer.addEventListener(MouseEvent.ROLL_OUT, function():void {				//alter colour				var my_color:ColorTransform = new ColorTransform();				my_color.color = theColour1;				thisBack.transform.colorTransform = my_color;			});			theContainer.addEventListener(MouseEvent.MOUSE_DOWN, theAppBase.newSub);		}	}}