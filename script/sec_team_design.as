package script {		import flash.display.*;	import flash.events.*;	import flash.geom.*;	import flash.utils.*;	import com.greensock.*;	import com.greensock.easing.*;	import script.ui.BaseButton;		public class sec_team_design extends Sprite {				public var theAppBase:appBase;		private var backArr:global_back_arr;		private var backArrCont:Sprite;		private var currPos:int;		private var holder1:Sprite;		private var holder2:Sprite;				public function sec_team_design(mainApp) {			// constructor code			theAppBase = mainApp;						//Configure the placement			var nameArr:Array = new Array();			nameArr[0] = 'a_bird_profile';			nameArr[1] = 'a_corkery_profile';			nameArr[2] = 'a_greenwood_profile';			nameArr[3] = 'a_kensington_profile';			nameArr[4] = 'b_fallow_profile';			nameArr[5] = 'b_hughes_profile';			nameArr[6] = 'b_kleinschmit_profile';			nameArr[7] = 'b_mclay_profile';			nameArr[8] = 'c_blake_profile';			nameArr[9] = 'c_laquette_profile';			nameArr[10] = 'c_miller_profile';			nameArr[11] = 'd_bernasconi_profile';			nameArr[12] = 'd_pelly_profile';			nameArr[13] = 'g_belgrano_profile';			nameArr[14] = 'j_france_profile';			nameArr[15] = 'l_boismain_profile';			nameArr[16] = 'm_biviot_profile';			nameArr[17] = 'm_mcelwee_profile';			nameArr[18] = 'm_seo_profile';			nameArr[19] = 'n_holroyd_profile';			nameArr[20] = 'n_hutchins_profile';			nameArr[21] = 'n_shaver_profile';			nameArr[22] = 'p_flett_profile';			nameArr[23] = 'p_melvin_profile';			nameArr[24] = 's_collie_profile';			nameArr[25] = 't_win_profile';			var posArr:Array = new Array();			var column:Number = -1;			var columnDist:int = 205;			var rowDist:int = 42;			var theRow:int = 0;			var theX:int = 0;			var theY:int = 0;			//Create two holders			holder1 = new Sprite();			addChild(holder1);			holder2 = new Sprite();			holder2.x = 1300;			addChild(holder2);						//First loop			for(var i:int = 0; i < 20; i ++){				//4 x 5 grid				if(i % 5 == 0){					column ++;				}				theX = column * columnDist;				theY = theRow * rowDist;				theRow ++;				if(theRow > 4){					theRow = 0;				}				posArr[i] = new Array();				posArr[i][0] = theX;				posArr[i][1] = theY;				var nameBit1:String = tools.getNameBit(nameArr[i]);				//Exceptions to two items				if(i == 4 || i == 13 || i == 19){					var classRef:Class = getDefinitionByName(nameBit1+'_main_profile_button') as Class;					var newPerson = new BaseButton(new classRef());					newPerson.content.name = nameArr[i];					newPerson.content.x = posArr[i][0];					newPerson.content.y = posArr[i][1];					newPerson.content.addEventListener(MouseEvent.MOUSE_DOWN, theAppBase.newSub);					newPerson.enable();										holder1.addChild(newPerson.content);				}else{					var classRef1:Class = getDefinitionByName(nameBit1+'_main_profile_button') as Class;					var newPerson1:MovieClip = new classRef1();					newPerson1.name = nameArr[i];					newPerson1.x = posArr[i][0];					newPerson1.y = posArr[i][1];										holder1.addChild(newPerson1);				}							}			//Second loop - reset			theRow = 0;			column = -1;			for(var j:int = 20; j < 26; j ++){				//4 x 5 grid				if(j % 5 == 0){					column ++;				}				theX = column * columnDist;				theY = theRow * rowDist;				theRow ++;				if(theRow > 4){					theRow = 0;				}				posArr[j] = new Array();				posArr[j][0] = theX;				posArr[j][1] = theY;				var nameBit2:String = tools.getNameBit(nameArr[j]);				var classRef2:Class = getDefinitionByName(nameBit2+'_main_profile_button') as Class;				var newPerson2:MovieClip = new classRef2();				newPerson2.name = nameArr[j];				newPerson2.x = posArr[j][0];				newPerson2.y = posArr[j][1];				holder2.addChild(newPerson2);			}						//Navigate between			backArr = new global_back_arr();			backArr.name = 'backArr';			backArr.x = 20 + (backArr.width/2);			backArr.y = 20;			backArr.rotation = 180;			backArrCont = new Sprite();			backArrCont.name = 'backArrCont';			backArrCont.x = 1024 - 70;			backArrCont.y = 50;			backArrCont.buttonMode = true;			addChild(backArrCont);			giveMeABackBtn('profilesBack',0xD4A630,0x8E6F32);			currPos = 1;		}				/**		 * Public functions		 */		public function giveMeABackBtn(theName:String, theColour1:uint, theColour2:uint):void{			var thisBack:Sprite = new Sprite();			thisBack.name = theName;			thisBack.graphics.beginFill(theColour1, 1);			thisBack.graphics.drawRect(0, 0, 40, 40);			thisBack.graphics.endFill();			thisBack.width = 40;			thisBack.height = 40;			backArrCont.addChild(thisBack);			backArrCont.addChild(backArr);			backArrCont.addEventListener(MouseEvent.ROLL_OVER, function(){				//alter colour 				var my_color:ColorTransform = new ColorTransform();				my_color.color = theColour2;				thisBack.transform.colorTransform = my_color;			});			backArrCont.addEventListener(MouseEvent.ROLL_OUT, function(){				//alter colour				var my_color:ColorTransform = new ColorTransform();				my_color.color = theColour1;				thisBack.transform.colorTransform = my_color;			});			backArrCont.addEventListener(MouseEvent.MOUSE_DOWN, goBack);		}				public function goBack(e:MouseEvent):void{			if(currPos == 1){				TweenLite.to(holder1,0.5,{x:-1300, ease:Sine.easeIn, onComplete:function(){					backArr.rotation = 0;					backArr.x = backArr.x - 20;					currPos = 2;				}});				TweenLite.to(holder2,0.5,{x:0, ease:Sine.easeOut});			}else{				TweenLite.to(holder2,0.5,{x:1300, ease:Sine.easeIn});				TweenLite.to(holder1,0.5,{x:0, ease:Sine.easeOut, onComplete:function(){					backArr.rotation = 180;					backArr.x = backArr.x + 20;					currPos = 1;				}});			}		}			}	}